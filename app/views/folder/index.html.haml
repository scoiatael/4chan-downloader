%div.container
    %div.row
        %div.col.s12.collection
            - @folders.each do |folder|
                %li.collection-item.avatar
                    %img.circle{src: image_url(folder.avatar!.path)}
                    %a.title{href: "/app#/folders/#{folder.id}"}
                        = folder.name
                        %div.secondary-content
